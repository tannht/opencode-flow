{
  "name": "@claude-flow/testing",
  "version": "3.0.0-alpha.1",
  "type": "module",
  "description": "Testing module - TDD London School framework, test utilities, fixtures, and mock services for V3 Claude-Flow",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./helpers": {
      "types": "./dist/helpers/index.d.ts",
      "import": "./dist/helpers/index.js"
    },
    "./fixtures": {
      "types": "./dist/fixtures/index.d.ts",
      "import": "./dist/fixtures/index.js"
    },
    "./mocks": {
      "types": "./dist/mocks/index.d.ts",
      "import": "./dist/mocks/index.js"
    },
    "./setup": {
      "types": "./dist/setup.d.ts",
      "import": "./dist/setup.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "claude-flow",
    "testing",
    "vitest",
    "tdd",
    "london-school",
    "mocks",
    "fixtures"
  ],
  "peerDependencies": {
    "vitest": ">=1.0.0",
    "@claude-flow/shared": "workspace:*",
    "@claude-flow/memory": "workspace:*",
    "@claude-flow/swarm": "workspace:*"
  },
  "devDependencies": {
    "@claude-flow/shared": "workspace:*",
    "@claude-flow/memory": "workspace:*",
    "@claude-flow/swarm": "workspace:*",
    "vitest": "^2.0.0",
    "typescript": "^5.3.0"
  }
}
