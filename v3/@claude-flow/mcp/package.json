{
  "name": "@claude-flow/mcp",
  "version": "3.0.0-alpha.8",
  "type": "module",
  "description": "Standalone MCP (Model Context Protocol) server - stdio/http/websocket transports, connection pooling, tool registry",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "exports": {
    ".": "./dist/index.js",
    "./*": "./dist/*.js"
  },
  "scripts": {
    "test": "vitest run",
    "build": "tsc"
  },
  "dependencies": {
    "ajv": "^8.12.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/ws": "^8.5.10",
    "vitest": "^4.0.16"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "claude",
    "ai-agents",
    "json-rpc",
    "stdio",
    "websocket",
    "tool-registry"
  ],
  "publishConfig": {
    "access": "public",
    "tag": "v3alpha"
  }
}
